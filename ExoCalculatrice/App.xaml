<Application x:Class="ExoCalculatrice.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:ExoCalculatrice"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary>
                    <sys:String x:Key="AppName">Calculatrice</sys:String>
                    <SolidColorBrush x:Key="DefaultBackground" Color="#FF1A1A1A" />
                </ResourceDictionary>
                <ResourceDictionary Source="Resources\BorderResources.xaml" />
                <ResourceDictionary Source="Resources\ButtonResources.xaml" />
                <ResourceDictionary Source="Resources\WindowResources.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>        
    </Application.Resources>
</Application>
